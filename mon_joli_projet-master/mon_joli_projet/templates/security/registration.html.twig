{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="myFont text-center mt-5 text-danger">Inscription sur le site</h1>

        {{ form_start(form) }}
        {{ form_row(form.username, {'label': 'Nom d\'utilisateur',
        'attr':{'class':'input-group','placeholder': 'Nom d\'utilisateur'}}) }}
        {{ form_row(form.email, {'label': 'Adresse email',
        'attr':{'class':'input-group','placeholder': 'votreadresse@mail.com'}}) }}
        {{ form_row(form.password, {'label': 'Mot de passe',
        'attr':{'class':'input-group','placeholder': 'Mot de passe'}}) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe',
        'attr':{'class':'input-group','placeholder': 'Confirmation du mot de passe'}}) }}
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success">Inscription !</button>
        </div>
        <p class="mt-4 text-center">Vous avez une compte? <a href="{{ path('security_login')}}" class="text-danger"> Connectez-vous !</a></p>
        {{ form_end(form) }}
    </div>
{% endblock %}